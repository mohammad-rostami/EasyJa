<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_card"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="4dp">


            <LinearLayout
                android:id="@+id/field1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_purple_stroke"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/last_price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_back"
                    android:gravity="center"
                    android:lines="1"
                    android:padding="8dp"
                    android:text="۳۲۰۰۰"
                    android:textColor="@color/lightGray" />

                <TextView
                    android:id="@+id/off1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="٪ ۱۵"
                    android:textColor="@color/pink" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/field2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_pink_stroke"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/price1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:padding="8dp"
                    android:text="۲۰۰۰"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/field3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_round_button"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="۱۲ - ۱۴"
                    android:textColor="@color/darkGray" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:alpha="0.5"
            android:visibility="gone"
            android:background="@color/lightGray"
            android:orientation="horizontal" />
    </FrameLayout>
</android.support.v7.widget.CardView>
